---
import Button from './Button.astro';
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          Generate <span class="typed-text"></span> test data <span class="highlight">instantly</span>
        </h1>
        <p class="hero-description">
          DataSeed is a Chrome extension that generates realistic test data with hundreds of built-in generators, custom templates, and AI-powered intelligence. Automatically fill forms and create contextual data in seconds. Perfect for developers, QA engineers, and anyone who needs quick, realistic test data.
        </p>
        <div class="hero-cta">
          <Button href="javascript:void(0)">
            Launching soon!
          </Button>
        </div>
      </div>
      <div class="hero-visual">
        <div class="illustration">
          <img
            src={`${import.meta.env.BASE_URL}/images/hero-poster-image.png`}
            alt="DataSeed Chrome Extension Screenshot"
            class="hero-screenshot"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import Typed from 'typed.js';

  document.addEventListener('DOMContentLoaded', () => {
    const typedElement = document.querySelector('.typed-text');

    if (typedElement) {
      new Typed('.typed-text', {
        strings: ['static', 'custom', 'AI powered'],
        typeSpeed: 50,
        backSpeed: 30,
        backDelay: 1000,
        startDelay: 300,
        loop: true,
        showCursor: false
      });
    }
  });
</script>

<style>
  .hero {
    padding: var(--spacing-xl) 0 var(--spacing-2xl) 0;
    background: var(--color-bg-card);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-text {
    max-width: 100%;
  }

  .hero-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    line-height: 1.15;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
    letter-spacing: -0.02em;
  }

  .highlight {
    position: relative;
    white-space: nowrap;
  }

  .highlight::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0.1em;
    width: 100%;
    height: 0.15em;
    background-color: var(--color-accent);
    opacity: 0.3;
  }

  .typed-text {
    display: inline-block;
    min-width: 150px;
  }

  .hero-description {
    font-size: var(--text-lg);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
    max-width: 580px;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .illustration {
    width: 100%;
    max-width: 600px;
  }

  .hero-screenshot {
    width: 100%;
    height: auto;
    border-radius: 16px;
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--color-border);
  }

  @media (min-width: 1024px) {
    .hero {
      padding: var(--spacing-xl) 0 var(--spacing-2xl) 0;
    }

    .hero-content {
      grid-template-columns: 1.1fr 0.9fr;
      gap: var(--spacing-2xl);
    }

    .hero-text {
      max-width: 600px;
    }
  }

  @media (max-width: 1023px) {
    .hero-content {
      gap: var(--spacing-lg);
      text-align: center;
    }

    .hero-description {
      margin-left: auto;
      margin-right: auto;
    }

    .hero-cta {
      justify-content: center;
    }
  }
</style>
