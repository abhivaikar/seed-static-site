---
const features = [
  {
    title: "Static Data Generators",
    description: "Access hundreds of pre-built generators for names, addresses, emails, phone numbers, and more. Generate realistic test data instantly.",
    icon: "database",
    color: "oat",
    image: '/images/features/static.png',
    alt: 'Static data generator panel'
  },
  {
    title: "Custom Templates",
    description: "Create reusable templates with placeholders that expand to random data. Perfect for email templates, user profiles, and complex forms.",
    icon: "template",
    color: "cactus",
    image: '/images/features/custom.png',
    alt: 'Custom data generator panel'
  },
  {
    title: "AI-Powered Generation",
    description: "Use OpenAI, Gemini, DeepSeek, or local LLMs to generate contextual data based on your specific requirements. Truly intelligent test data.",
    icon: "ai",
    color: "heather",
    image: '/images/features/ai-panel.png',
    alt: 'AI panel for simple data'
  },
  {
    title: "Auto Fill Forms with AI (Beta)",
    description: "Automatically detect and fill entire forms with contextually appropriate data using AI. Save hours of manual form testing.",
    icon: "form",
    color: "oat",
    image: '/images/features/ai-autofill-panel.png',
    alt: 'AI auto fill form panel'
  }
];
---

<section class="features section" id="features">
  <div class="container">
    <div class="features-header">
      <h2 class="section-title">Quick Test Data Without Context Switching</h2>
      <p class="section-description">
        Generate realistic test data instantly while testing websites - no more manual typing or switching between tools
      </p>
    </div>
    <div class="features-grid">
      {features.map((feature) => (
        <div class={`feature-card feature-card-${feature.color}`}>
          <div class="feature-content">
            <div class="feature-icon">
              {feature.icon === 'database' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                  <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                  <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                </svg>
              )}
              {feature.icon === 'template' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="3" y1="9" x2="21" y2="9"></line>
                  <line x1="9" y1="21" x2="9" y2="9"></line>
                </svg>
              )}
              {feature.icon === 'ai' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 16v-4"></path>
                  <path d="M12 8h.01"></path>
                </svg>
              )}
              {feature.icon === 'form' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
              )}
              {feature.icon === 'shield' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              )}
            </div>
            <h3 class="feature-title">{feature.title}</h3>
            <p class="feature-description">{feature.description}</p>
          </div>
          <div class="feature-image">
            <div class="image-placeholder">
              {feature.image ? (
    <img src={`${import.meta.env.BASE_URL}${feature.image}`} alt={feature.alt ?? feature.title} loading="lazy" />
  ) : (
    <div class="image-placeholder">â€¦</div>
  )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features {
    background-color: var(--color-bg-card);
    padding: var(--spacing-2xl) 0;
  }

  .features-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    max-width: 720px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 var(--spacing-sm);
  }

  .section-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
    letter-spacing: -0.02em;
  }

  .section-description {
    font-size: var(--text-lg);
    line-height: 1.7;
    color: var(--color-text-secondary);
  }

  .features-grid {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    max-width: 1200px;
    margin: 0 auto;
  }

  .feature-card {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg);
    border: 1px solid var(--color-border);
    border-radius: 20px;
    overflow: hidden;
  }

  /* Anthropic-inspired colors */
  .feature-card-oat {
    background-color: var(--color-feature-oat);
  }

  .feature-card-cactus {
    background-color: var(--color-feature-cactus);
  }

  .feature-card-heather {
    background-color: var(--color-feature-heather);
  }

  .feature-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .feature-icon {
    width: 40px;
    height: 40px;
    background-color: var(--color-icon-bg);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent);
    margin-bottom: var(--spacing-sm);
  }

  .feature-title {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--spacing-xs);
    line-height: 1.3;
  }

  .feature-description {
    font-size: var(--text-sm);
    line-height: 1.65;
    color: var(--color-text-secondary);
  }

  .feature-image {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-placeholder {
    width: 100%;
    aspect-ratio: 4/3;
    background-color: var(--color-placeholder);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-placeholder-border);
  }

  .image-placeholder p {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    text-align: center;
    padding: var(--spacing-md);
  }

  @media (max-width: 768px) {
    .feature-card {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .feature-image {
      order: -1;
    }
  }

  @media (max-width: 640px) {
    .feature-card {
      padding: var(--spacing-md);
    }
  }
</style>
