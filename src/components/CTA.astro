---
import Button from './Button.astro';
---

<section class="cta">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">Speed up your test sessions from today</h2>
      <img
        src={`${import.meta.env.BASE_URL}/icons/icon128.png`}
        alt="DataSeed Logo"
        class="cta-logo"
      />
      <div class="cta-buttons">
        <Button
          href="https://chromewebstore.google.com/detail/eddffeeadmgdiologhdhamocbajhpmho"
          target="_blank"
          rel="noopener noreferrer"
        >
          Add to Chrome
        </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    background-color: var(--color-bg-card);
    padding: var(--spacing-2xl) 0;
    margin: var(--spacing-2xl) 0;
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--spacing-sm);
    letter-spacing: -0.02em;
    color: var(--color-text);
  }

  .cta-logo {
    width: 128px;
    height: 128px;
    margin: var(--spacing-lg) auto;
    display: block;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons :global(.button) {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
