---
// src/pages/privacy-policy.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

import PrivacyPolicy from '../content/privacy-policy.md';
---

<BaseLayout title="Privacy Policy">
  <Navigation />

  <main class="privacy-page">
    <article class="content markdown-content">
      <PrivacyPolicy />
    </article>
  </main>

  <Footer />
</BaseLayout>

<style>
  .privacy-page {
    min-height: 60vh;
    padding: var(--spacing-xl) 0;
  }

  .content {
    max-width: 48rem;
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  /* Markdown Content Styling */
  .markdown-content {
    color: var(--color-text);
    line-height: 1.7;
  }

  /* Headings */
  .markdown-content :global(h1) {
    font-size: var(--text-3xl);
    font-weight: 700;
    line-height: 1.2;
    margin-top: 0;
    margin-bottom: var(--spacing-lg);
    letter-spacing: -0.02em;
    color: var(--color-text);
  }

  .markdown-content :global(h2) {
    font-size: var(--text-2xl);
    font-weight: 700;
    line-height: 1.3;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    letter-spacing: -0.01em;
    color: var(--color-text);
  }

  .markdown-content :global(h3) {
    font-size: var(--text-xl);
    font-weight: 600;
    line-height: 1.4;
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .markdown-content :global(h4) {
    font-size: var(--text-lg);
    font-weight: 600;
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  /* Paragraphs */
  .markdown-content :global(p) {
    margin-top: 0;
    margin-bottom: var(--spacing-md);
    font-size: var(--text-base);
    color: var(--color-text);
  }

  /* Lists */
  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin-top: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-lg);
  }

  .markdown-content :global(li) {
    margin-top: var(--spacing-xs);
    margin-bottom: var(--spacing-xs);
    font-size: var(--text-base);
    color: var(--color-text);
  }

  .markdown-content :global(li > ul),
  .markdown-content :global(li > ol) {
    margin-top: var(--spacing-xs);
    margin-bottom: var(--spacing-xs);
  }

  /* Horizontal Rules */
  .markdown-content :global(hr) {
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
    border: 0;
    border-top: 2px solid var(--color-border);
  }

  /* Links */
  .markdown-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    transition: opacity 0.2s ease;
  }

  .markdown-content :global(a:hover) {
    opacity: 0.7;
  }

  /* Strong/Bold */
  .markdown-content :global(strong) {
    font-weight: 600;
    color: var(--color-text);
  }

  /* Code */
  .markdown-content :global(code) {
    background-color: var(--color-bg-card);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: 'Monaco', 'Courier New', monospace;
    color: var(--color-text);
  }

  .markdown-content :global(pre) {
    background-color: var(--color-bg-card);
    padding: var(--spacing-md);
    border-radius: 8px;
    overflow-x: auto;
    margin-top: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    border: 1px solid var(--color-border);
  }

  .markdown-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
    font-size: var(--text-sm);
  }

  /* Blockquotes */
  .markdown-content :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: var(--spacing-md);
    margin-left: 0;
    margin-right: 0;
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    color: var(--color-text-secondary);
    font-style: italic;
  }

  /* Tables */
  .markdown-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .markdown-content :global(th),
  .markdown-content :global(td) {
    padding: var(--spacing-xs) var(--spacing-sm);
    border: 1px solid var(--color-border);
    text-align: left;
  }

  .markdown-content :global(th) {
    background-color: var(--color-bg-card);
    font-weight: 600;
  }

  /* First child margin removal */
  .markdown-content :global(> *:first-child) {
    margin-top: 0;
  }

  .markdown-content :global(> *:last-child) {
    margin-bottom: 0;
  }
</style>